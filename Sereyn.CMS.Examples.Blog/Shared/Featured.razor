
@if (featuredArticles.Count != 0)
{
    <section id="Featured">
        <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
            <div class="col-md-6 px-0">
                <h1 class="display-4 font-italic">@featuredArticles[0].Title</h1>
                <p class="lead my-3">@featuredArticles[0].Lede</p>
                <p class="lead mb-0"><a href="@string.Format("Articles/{0}", featuredArticles[0].Route)" class="text-white font-weight-bold">Continue reading...</a></p>
            </div>
        </div>
        <div class="row mb-2">

            @foreach (var item in featuredArticles.Skip(1))
            {
                <div class="col-md-6">
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-primary">@item.Category</strong>
                            <h3 class="mb-0">@item.Title</h3>
                            <div class="mb-1 text-muted">@item.Created.ToString("MMM yy")</div>
                            <p class="card-text mb-auto">@item.Lede.Remove(75)</p>
                            <a href="@string.Format("Articles/{0}", item.Route)" class="stretched-link">Continue reading</a>
                        </div>
                        <div class="col-auto d-none d-lg-block">
                            <img src="https://via.placeholder.com/200x250" alt="Alternate Text" />

                        </div>
                    </div>
                </div>
            }


        </div>
    </section>
}
